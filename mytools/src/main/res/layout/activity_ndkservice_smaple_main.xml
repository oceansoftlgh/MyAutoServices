<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_margin="@dimen/activity_root_pading"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_ndkservice_main_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="one"
        android:textSize="16sp"
        android:gravity="left|center_vertical"/>
    <TextView
        android:id="@+id/tv_ndkservice_main_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5dp"
        android:text="two"
        android:gravity="left|center_vertical"/>
    <TextView
        android:id="@+id/tv_ndkservice_main_text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5dp"
        android:text="three"
        android:gravity="left|center_vertical"/>
    <Button
        android:id="@+id/btn_ndkservice_main_btnstart"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start"
        android:textSize="16sp"
        />
    <Button
        android:id="@+id/btn_ndkservice_main_btnend"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="end"
        android:textSize="16sp"
        />

</LinearLayout>