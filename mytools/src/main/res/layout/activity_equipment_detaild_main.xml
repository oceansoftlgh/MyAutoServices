<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                android:padding="@dimen/activity_root_pading"
              android:layout_height="match_parent">

<TableRow android:layout_margin="@dimen/activity_root_pading"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:text="像素："
        android:textSize="16sp"
        >
        
    </TextView>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_equipment_px"
        android:textSize="16sp"
        android:hint="0px X 0px"
      />
    </TableRow>
    <TableRow android:layout_margin="@dimen/activity_root_pading"
              android:layout_width="match_parent"
              android:layout_height="match_parent">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:text="像素："
            android:textSize="16sp"
            >

        </TextView>


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_equipment_dp"
            android:textSize="16sp"
            android:hint="0px X 0px"
            />
    </TableRow>
</TableLayout>